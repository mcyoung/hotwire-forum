<%= turbo_stream_from "discussions" %>

<div class="d-flex justify-content-between align-center">
  <h1>Discussions</h1>
  <div>
    <%= link_to "New discussion", new_discussion_path, class: %w[btn btn-primary] %>  
  </div>
</div>

<div class="row mt-4">
  <div class="col-3">
    <%= turbo_stream_from "categories" %>
    <h5>Categories</h5>
    <div id="categories">
      <%= render partial: "categories/category", collection: Category.sorted %>
    </div>
  </div>
  <div class="col">
    <div id="discussions">
      <%= render @discussions %>
    </div>
  </div>
</div>